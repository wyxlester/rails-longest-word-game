<h1 class="mt-5">Longest Word Game</h1>
<p class="py-5"><%= @letters %></p>

<form action="/score" data-turbo="false" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input class="mb-3" type="text" name="input" value=<%= @user_input %>>
  <br>
  <input class="btn btn-success mt-3" type="submit" value="Submit">
</form>
